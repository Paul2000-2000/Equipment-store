<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" prefHeight="400" prefWidth="600"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="org.loose.fis.proiect.controllers.EditButtonFromEditProductsController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="namefield" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="pricefield" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="stockfield" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="categoryfield" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Company:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <TextField fx:id="companyfield" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="8">
        <Button fx:id="backbutton" onAction="#handleBackAction" text="Back"/>
    </HBox>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="8">
        <Button fx:id="editbutton" onAction="#handleEditAction" text="Edit"/>
    </HBox>
</GridPane>

