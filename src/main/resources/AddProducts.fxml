<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="400" prefWidth="600" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.proiect.controllers.AddProductsController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>

    <Label text="Name:" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <TextField fx:id="nameField" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    <Label text="Price:" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <TextField fx:id="priceField" GridPane.columnIndex="2" GridPane.rowIndex="2" />

    <Label text="Stock:" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <TextField fx:id="stockField" GridPane.columnIndex="2" GridPane.rowIndex="3" />

    <Label text="Category:" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <TextField fx:id="categoryField" GridPane.columnIndex="2" GridPane.rowIndex="4" />

    <Label text="Company:" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <TextField fx:id="companyField" GridPane.columnIndex="2" GridPane.rowIndex="5" />

<HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="9">
    <Button fx:id="backbutton" onAction="#handleBackAction" text="Back" />
</HBox>

<HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="9">
    <Button fx:id="addproductbutton" onAction="#handleAddProductAction" text="Add product" />
</HBox>

    <Text fx:id="AddProductMessage" GridPane.columnIndex="2" GridPane.rowIndex="11" />


</GridPane>
